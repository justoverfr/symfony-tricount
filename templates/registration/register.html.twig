{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@200&family=Montserrat:wght@100&family=Roboto+Mono:ital,wght@0,300;0,400;1,300&family=Roboto+Slab:wght@300&family=Titillium+Web:ital@1&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Josefin Sans', Arial, sans-serif;
        }
    </style>

    <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">

<div class="form-container">

        {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="form-row">
        <div class="form-group">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.username) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            {{ form_row(registrationForm.firstName) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.lastName) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
    </div>
    <div class="form-group">
        {{ form_row(registrationForm.agreeTerms) }}
    <div class="text_right">
    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    </div>
    </div>
</div>
{% endblock %}
